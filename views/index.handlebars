<nav>
    <div class="nav-wrapper">
        <a href="/burgers" class="brand-logo center">Quang's Burgers</a>
    </div>
</nav>

<div class="container">
	<div class="row">
        <br>
        <br>
		<div class="col s6 center" class="task">
			<div class="row">
			  {{#each burgers}}
			  	{{#unless this.devoured}}
				<div class="col s9 left-align">
                    <h4>
                        {{this.id}}. {{this.burger_name}}
                    </h4>
				</div>
				<div class="col s3 center">
					<form class="devour-form" class="button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col s6 center" class="task">
			  {{#each burgers}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col s12 center">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger you want to eat.</p> 
            <p>Click the "Submit" button.</p>
		</div>
	</div>
</div>